
<%= form_for :user, url:'/users' do |f|%>
    <%= f.label "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label "Password:" %>
    <%= f.password_field :password %><br>
    <%= f.label "Password Confirmation:" %>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Create User"%>
<% end %>